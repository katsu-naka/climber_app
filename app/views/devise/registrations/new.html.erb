<div class=header-menu1>
  <div class="header1-title">
    <p>新規登録</p>
  </div>
</div>

<div class="devise-field">
  <div class="devise-contents">
    <div class="devise-form-field">

    <p>メールアドレスで新規登録する</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"devise-form" %>
  </div>

  <div class="field">
    <%= f.label :name, "氏名（フルネーム）" %><br />
    <%= f.text_field :name, placeholder:"例）山田太郎",class:"devise-form"%>
  </div>

  <%if @sns_id.present? %>
    <%= hidden_field_tag :sns_auth, true %>
  <% else %>
    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <br />
      <%= f.password_field :password, autocomplete: "new-password",class:"devise-form"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（再入力）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"devise-form" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "新規登録", class:"devise-submit-btn" %>
  </div>
<% end %>
<p>既にアカウントをお持ちの方</p>

<%= render "devise/shared/links" %>

    </div>
  </div>
</div>
